<p id="notice"><%= notice %></p>

<h1>Gears</h1>
<%# <input type="text" name="query" id="query" placeholder="Nhập tên" >
<input type="submit" name="commit" value="Search"> %>

  <%= form_tag gears_path, method: :get do %>
  <%= text_field_tag "query", params[:query], placeholder: "Name" %>
  <%= submit_tag "Search!" %>
  <% end %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Image url</th>
      <th>Price</th>
      <th>Inventory</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @gears.each do |gear| %>
      <tr>
        <td><%= gear.name %></td>
        <td><%= gear.description %></td>
        <td><%= gear.image_url %></td>
        <td><%= gear.price %></td>
        <td><%= gear.inventory %></td>
        <td><%= link_to 'Show', gear %></td>
        <td><%= link_to 'Edit', edit_gear_path(gear) %></td>
        <td><%= link_to 'Destroy', gear, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
  
</table>
<%= will_paginate @gears%>
<br>

<%= link_to 'New Gear', new_gear_path %>
