<%= form_for @gear, html: { multipart: true } do |form| %>

  <% if gear.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(gear.errors.count, "error") %> prohibited this gear from being saved:</h2>

      <ul>
        <% gear.errors.full_messages.each do |message| %>
          <li>
            <%= message %>
          </li>
          <% end %>
      </ul>
    </div>
    <% end %>

      <div class="field">
        <%= form.label :name %>
          <%= form.text_field :name %>
      </div>

      <div class="field">
        <%= form.label :description%>
          <%= form.text_area :description ,:size=>"40x10" %>
      </div>

      <div class="field">
        <%= form.label :image%>

          <%= form.file_field :image %>
            <%= form.submit %>

      </div>

      <div class="field">
        <%= form.label :price %>
          <%= form.text_field :price %>
      </div>

      <div class="field">
        <%= form.label :inventory %>
          <%= form.text_field :inventory %>
      </div>
      
      <div class="field">
          <%= form.label :brand %>
          <%= form.collection_select :id, Brand.order(:brandname),:id,:brandname, include_blank: true %>
      </div>
      <div class="field">
          <%= form.label :type %>
          <%= form.collection_select(:type, Type.all, :id, :typename ) %>
      </div>
      <div class="actions">
        <%= form.submit %>
      </div>
      <% end %>