<p id="notice">
    <%= notice %>
</p>

<h1>Orders</h1>
<form>
    <input type="month" name="bdaymonth">
    <input type="submit">
</form>
<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Address</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Pay type</th>
            <th>Ngày lập</th>
            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @orders.each do |order| %>
            <tr>
                <td>
                    <%= order.name %>
                </td>
                <td>
                    <%= order.address %>
                </td>
                <td>
                    <%= order.phone %>
                </td>
                <td>
                    <%= order.email %>
                </td>
                <td>
                    <%= order.pay_type %>
                </td>
                <td>
                    <%= order.created_at.strftime("%d/%m/%Y") %>
                </td>
            </tr>
            <% end %>
    </tbody>
</table>

<br>